{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist", // Garante que a saída seja na pasta 'dist'
    "rootDir": "./src", // Define a raiz do código fonte como 'src'
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Inclui apenas os arquivos da pasta 'src' no build
  "exclude": ["node_modules"]
}
